{
	"manifest_version": 2,
	"author": "Neivin Mathew",

	"name": "Weatherloo",
	"version": "1.0",

	"permissions": ["http://weather.uwaterloo.ca/",
					"http://api.openweathermap.org/",
					"tabs",
					"storage"],

	"description": "Fetches weather information for Waterloo, ON.",
	"icons": {"16": "img/icon16.png",
			  "48": "img/icon48.png",
			  "128": "img/icon128.png"},

	"browser_action": {
		"default_icon": "img/icon16.png",
		"default_popup": "popup.html"
		},
	"options_ui":{
		"page": "options.html",
		"open_in_tab": true,
		"chrome_style": true
	}
}
